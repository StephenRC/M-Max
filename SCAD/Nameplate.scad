$fn=100;
//TextFont="Stencil BT:style=Regular";
//TextFont="StarTrek Film BT:style=Regular";
TextFont="StarTrekNext XBd BT:style=Extra Bold";
Thickness=5;
Length=124;
Width=20;
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

NamePlate(1,"M-Max");

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

module NamePlate(Raised=0,TheText="[printer]") {
	difference() {
		color("cyan") cuboid([124,20,Thickness],rounding=2,p1=[0,0],except_edges=BOTTOM);
		translate([7,10,0]) color("red") cyl(h=10,d=screw5);
		translate([7,10,Thickness+1]) color("blue") cyl(h=5,d=screw5hd);
		translate([115,10,0]) color("blue") cyl(h=10,d=screw5);
		translate([115,10,Thickness+1]) color("red") cyl(h=5,d=screw5hd);
		if(!Raised) translate([Length/2,5,Thickness/2]) PrintString(TheText,Thickness*2,10);
	}
	if(Raised) translate([Length/2,5,Thickness]) PrintString(TheText,Thickness,12);
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

module PrintString(String,TxtHeight=1,TxtSize=3.5) { // print something
	color("darkgray") text3d(String, h=TxtHeight,size=TxtSize, font=TextFont,anchor=str("baseline",CENTER));
}

