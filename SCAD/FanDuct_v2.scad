use </inc/cubex.scad>
//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
$fn=100;
clearance=0.10;
WallThickness=1;
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

FanDuct_v2();

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

module FanDuct_v2() {
	difference() {
		color("cyan") hull() {
			FanDuct_Base();
			FanDuct_Outlet();
		}
		FanDuct_Interior();
	}
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

module FanDuct_Base() {
	//echo(parent_module(0));
	cube([15.2+(WallThickness+clearance)*2,20+(WallThickness+clearance)*2,3]);
}

//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

module FanDuct_Outlet(Length=50) {
	//echo(parent_module(0));
	translate([5,5,Length]) rotate([30,0,0]) cubeX([5.2+(WallThickness+clearance)*2,3+(WallThickness+clearance)*2,3,2]);
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

module FanDuct_Interior(Length=50) {
	//echo(parent_module(0));
	color("blue") hull() {
		translate([WallThickness+5,WallThickness+6.2,Length+1]) rotate([30,0,0]) color("blue")
			cube([5.2+(clearance)*2,2+(clearance)*2,5]);
		translate([WallThickness,WallThickness,-2]) color("blue") cube([15.2+(clearance)*2,20+(clearance)*2,5]);
	}
}

