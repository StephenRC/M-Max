include <inc/screwsizes.scad>
include <bosl2/std.scad>
/////////////////////////////////////////////////////////////////////////////////////////////////////////////////
$fn=100;
TextFont="ST Old English:style=Regular"; // "StarTrek Film BT:style=Regular";
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

plate();

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

module plate() {
	difference() {
		color("cyan") cuboid([81,20,4],rounding=2,p1=[0,0],except_edges=BOTTOM);
		translate([7,10,-5]) color("red") cylinder(h=10,d=screw5);
		translate([7,10,3]) color("blue") cylinder(h=10,d=screw5hd);
		translate([73,10,-5]) color("blue") cylinder(h=10,d=screw5);
		translate([73,10,3]) color("red") cylinder(h=10,d=screw5hd);
	}	
	translate([18,4.5,0]) printchar("M-Max",5,12);
}

/////////////////////////////////////////////////////////////////////////////////////////////////

module printchar(String,TxtHeight=1,TxtSize=3.5) { // print something
	color("darkgray") linear_extrude(height = TxtHeight) text(String,font=TextFont,size=TxtSize);
}

