include <inc/cubex.scad>
include <inc/brassinserts.scad>
//////////////////////////////////////////////////////////////////////////////////////////////////////
$fn=100;
Thickness=5;
Use4mmInsert=1;
////////////////////////////////////////////////////////////////////////////////////////////////////////

BedSide();
translate([25,0,0])
	FrameSide();

//////////////////////////////////////////////////////////////////////////////////////////////////////

module BedSide() {
	difference() {
		union() {
			color("cyan") cubeX([20,30,Thickness],2);
			color("blue") cubeX([Thickness,30,20],2);
		}
		translate([12,9,-3]) WirechainMounting();
		translate([-3,15,12]) ExtrusionMount();
	}
}

//////////////////////////////////////////////////////////////////////////////////////////////////////

module FrameSide(Height=45) {
	difference() {
		color("cyan") cubeX([Height,20,Thickness],2);
		translate([Height-8,10,-2]) rotate([0,0,90]) WirechainMounting();
		translate([10,10,15]) rotate([0,90,0]) ExtrusionMount();
	}
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////

module WirechainMounting() {
	color("red") cylinder(h=Thickness*3,d=Yes4mmInsert(Use4mmInsert));
	translate([0,11,0]) color("pink") cylinder(h=Thickness*3,d=Yes4mmInsert(Use4mmInsert));
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////

module ExtrusionMount() {
	color("plum") rotate([0,90,0]) cylinder(h=Thickness*3,d=screw5);
	translate([6,0,0]) color("gray") rotate([0,90,0]) cylinder(h=Thickness,d=screw5hd);
}

