include <inc/screwsizes.scad>
$fn=100;
////////////////////////////////////////////////////////////////////////////////////////////////////
// Used with ebay toothed idlers with a 5mm x 9mm small ball bearing
////////////////////////////////////////////////////////////////////////////////////////////////////

washer(1,8);
translate([0,8,0]) washer(2,8);
translate([0,16,0]) washer(3,4);

////////////////////////////////////////////////////////////////////////////////////////////////////////

module washer(Length=1,Qty=1,Screw=screw5) {
	for(x=[0:Qty-1]) {
		translate([x*8,0,0]) difference() {
			color("cyan") cylinder(h=Length,d=7);
			translate([0,0,-1]) color("red") cylinder(h=Length*3,d=screw5);
		}
	}
}

