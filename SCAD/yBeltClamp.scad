include <inc/screwsizes.scad>
//////////////////////////////////////////////////////////////////////////////////////////////////////////////////
$fn=32 * 4;
platformHeight=35.5;
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

translate([6,platformHeight-6.5,0]) beltClamp();
platform(platformHeight,screw3);

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

module frame(){
	hull(){
		translate([7,8,0]) rotate([0,0,30]) color("red") cylinder(10,8,8,$fn=6);
		translate([31,8,0]) rotate([0,0,30]) color("blue") cylinder(10,8,8,$fn=6);
	}
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

module beltLoop(){
	difference(){
		hull(){
			translate([6.5,1,0]) color("khaki") cylinder(h = 12, r1 = 1, r2 = 1);
			translate([13.5,5.5,0]) color("green") cylinder(h = 12, r1 = 5.5, r2 = 5.5);
		}
        hull(){
			translate([9,2.5,0]) color("pink") cylinder(h = 12, r1 = 1, r2 = 1);
			translate([13.5,5.5,0]) color("purple") cylinder(h = 12, r1 = 4, r2 = 4);
        }
    }
    cube([8,2,12]);
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////

module beltOpening(){
	beltLoop();
    translate([38,0,0]) mirror([1,0,0]) beltLoop();
    translate([17.5,2.5,0]) color("cyan") cube([3,8,12]);
    translate([19,7,0]) rotate([0,0,45]) color("gold") cube([4,4,12]);
}

/////////////////////////////////////////////////////////////////////////////////////////////////////////////////

module beltClamp(){
	difference(){
		frame();
		translate([0,6.5,3]) beltOpening();
	}
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

module platform(Height=platformHeight,Screw=screw3){
	translate([8.5,0,-0]) color("gray") cube([33,Height,10]);
    difference(){
	translate([0,0,0]) color("white") cube([50,4,10]);
		translate([4.5,-1,6]) rotate([-90,0,0]) color("red") cylinder(h=30, d=Screw, $fn=100);
		translate([45.5,-1,6]) rotate([-90,0,0]) color("blue") cylinder(h=30, d=Screw, $fn=100);
    }
}

