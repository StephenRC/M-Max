include <BOSL2/std.scad>
include <inc/screwsizes.scad>
/////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
$fn=100;
BladeWidth=56;
BladeThickness=1.7;
LayerThickness=0.3;
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

PuttyKnifeHolder(1);

/////////////////////////////////////////////////////////////////////////////////////////////////////////////////////\

module PuttyKnifeHolder(DoTab=0) {
	difference() {
		union() {
			color("khaki") hull() {
				color("cyan") cuboid([BladeWidth+4,BladeThickness+4,5],rounding=2,p1=[0,0]);
				translate([BladeWidth/2-8,10,0]) color("green") cuboid([20,4,25],rounding=2,p1=[0,0]);
			}
			if(DoTab) {
				translate([0,BladeThickness,0]) tab();
				translate([BladeWidth,BladeThickness,0]) tab();
			}
		}
		translate([2,2,-1]) color("red") cuboid([BladeWidth,BladeThickness,40],rounding=0.5,p1=[0,0]);
		translate([BladeWidth/2+2,17,18]) color("red") rotate([90,0,0]) cylinder(h=20,d=screw5);
		translate([BladeWidth/2+2,10,18]) color("blue") rotate([90,0,0]) cylinder(h=10,d=screw5hd);
		translate([0,0.25,5.5]) color("cyan") cuboid([BladeWidth+4,BladeThickness*2,5],rounding=0.5,p1=[0,0]);
	}
}

//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

module tab() { // help print stick
	color("gray") cylinder(h=LayerThickness,d=20);
}

