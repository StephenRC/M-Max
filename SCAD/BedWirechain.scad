include <BOSL2/std.scad>
include <inc/brassinserts.scad>
//////////////////////////////////////////////////////////////////////////////////////////////////////
$fn=100;
Thickness=5;
Use4mmInsert=1;
////////////////////////////////////////////////////////////////////////////////////////////////////////

BedSide();
translate([40,0,0])
	FrameSide();

//////////////////////////////////////////////////////////////////////////////////////////////////////

module BedSide() {
	difference() {
		union() {
			color("cyan") cuboid([20,30,Thickness],rounding=2);
			translate([7.5,0,8]) color("blue") cuboid([Thickness,30,20],rounding=2);
		}
		translate([-3,-5,-9]) WirechainMounting();
		translate([0,0,10]) ExtrusionMount();
	}
}

//////////////////////////////////////////////////////////////////////////////////////////////////////

module FrameSide(Height=45) {
	difference() {
		color("cyan") cuboid([Height,20,Thickness],rounding=2);
		translate([-3,0,-8]) rotate([0,0,90]) WirechainMounting();
		translate([13,0,12]) rotate([0,90,0]) ExtrusionMount();
	}
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////

module WirechainMounting() {
	color("red") cylinder(h=Thickness*3,d=Yes4mmInsert(Use4mmInsert));
	translate([0,11,0]) color("pink") cylinder(h=Thickness*3,d=Yes4mmInsert(Use4mmInsert));
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////

module ExtrusionMount() {
	color("plum") rotate([0,90,0]) cylinder(h=Thickness*3,d=screw5);
	translate([6,0,0]) color("gray") rotate([0,90,0]) cylinder(h=Thickness,d=screw5hd);
}

